<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title | Meeting App</title>
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css" integrity="sha512-b2QcS5SsA8tZodcDtGRELiGv5SaKSk1vDHDaQRda0htPYWZ6046lr3kJ5bAAQdpV2mmA/4v0wQF9MyU6/pDIAg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/style.css" />
    <style>
        body {
            background-color: #f8f9fa; /* Hafif bir arka plan rengi */
            font-family: Arial, sans-serif; /* Daha modern bir font */
        }

        .navbar {
            background-color: palevioletred; /* Navigasyon arka plan rengi */
        }

        .navbar-brand {
            color: #ffffff; /* Navigasyon metin rengi */
            width: 100%; /* Tam genişlik */
            text-align: center; /* Metni yatayda ortala */
        }

        .card {
            border: none; /* Kart kenarlığını kaldır */
            box-shadow: 0 4px 8px rgba(0,0,0,0.1); /* Hafif bir gölge ekleyerek kartı belirginleştir */
            border-radius: 10px; /* Kartın köşelerini yuvarla */
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Meeting App</a>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="card">
                    <div class="card-body">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
