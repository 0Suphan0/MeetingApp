@model List<UserInfo>
@{
    ViewBag.Title = "Listeleme Sayfası";
}

<main class="text-center">

<h1 class="h4">Toplantı Katılım Listesi</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>Ad</td>
            <td>Katılım Durumu</td>
        </tr>

    </thead>
    <tbody>

            @foreach(var user in Model)
            {
                var isAttend = user.WillAttend == true ? "Evet" : "Hayır";
                var className = user.WillAttend == true ? "table-success" : "table-danger";

               

            <tr class="@className">
            <td> @user.Name</td>
            <td> @isAttend</td>
            <td>
                <a class="btn btn-sm btn-primary" href="/meeting/details/@user.Id">Detay</a>
            </td>
             </tr>
            }

        
        
    </tbody>

</table>
<div class="card">
    <div class="card-body">
            <span>Katılımcı Sayısı: @ViewBag.UserCount</span>
    </div>
</div>
</main>