@model UserInfo;
@{
    ViewBag.Title = "Başvuru Sayfası";
}

<h1 class="h2 text-center mt-4">Toplantı Katılım Formu</h1>

<form method="post" action="/Meeting/Apply" novalidate class="row g-3 justify-content-center">
    <div asp-validation-summary="All" class="col-12"></div>
    <div class="col-md-6">
        <label asp-for="Name" class="form-label">Adınız-Soyadınız</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="col-md-6">
        <label asp-for="Phone" class="form-label">Telefon Numarası</label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="col-12">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="col-12">
        <label asp-for="WillAttend" class="form-label">Katılım Durumu</label>
        <select asp-for="WillAttend" class="form-select">
            <option value="">Seçiniz</option>
            <option value="true">Evet, Geliyorum</option>
            <option value="false">Hayır, Gelmiyorum</option>
        </select>
    </div>
    <div class="col-12 text-center">
        <button class="btn btn-primary" type="submit">Kayıt Ol</button>
    </div>
</form>
